<Page x:Class="Techtronica.View.CatalogPageFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Techtronica.Data.ViewModels.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatalogPageFrame">

    <Page.DataContext>
        <local:CatalogMenuFrameViewModel/>
    </Page.DataContext>
    
    <Grid>
        <ItemsControl ItemsSource="{Binding Categories}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid x:Name="Item" Margin="5,0,5,0" MouseLeftButtonDown="Item_MouseLeftButtonDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="ItemCheckBox" Grid.Column="0" Style="{StaticResource CheckBoxRounded}" Margin="5"/>
                        <Label Grid.Column="1" Content="{Binding Name}" FontFamily="Century Gothic" FontSize="20" Foreground="#FF636363"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
