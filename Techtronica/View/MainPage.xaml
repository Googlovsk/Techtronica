<Page x:Class="Techtronica.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Techtronica.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FFCACACA"
      Title="MainPage" Loaded="Page_Loaded">
    <Grid>

        <StackPanel x:Name="STK_LoginRegister" Visibility="Visible" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button x:Name="BtnLogin" Content="Вход" Click="BtnLogin_Click" Margin="5"/>
            <Button x:Name="BtnRegister" Content="Регистрация" Click="BtnRegister_Click" Margin="5"/>
        </StackPanel>
        <StackPanel x:Name="STK_Account" Visibility="Collapsed" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button x:Name="BtnAccount" Content="Аккаунт" Click="BtnAccount_Click" Margin="5"/>
        </StackPanel>

        <Border x:Name="BlurOverlay" Visibility="Collapsed" Background="Black" Opacity="0.5" VerticalAlignment="Stretch"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
